{
  "version": "2.0.0",
  "type": "shell",
  "echoCommand": true,
  "cwd": "${workspaceFolder}",
  "presentation": {
    "showReuseMessage": false
  },
  "tasks": [
    {
      "label": "rungo",
      "command": "go run ${file}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$go"
      ]
    }
  ]
}